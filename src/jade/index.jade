!!! 5
html(data-ng-app="timer")
	head
		meta(charset='UTF-8')
		meta(name="viewport", content="user-scalable=no, width=device-width, height=device-height, initial-scale=1, minimum-scale=1, maximum-scale=1, target-densityDpi=device-dpi")
		title PhoneGap Timer
		link(rel='stylesheet', href='css/app.css')
	body
		div#MainDisplay(data-ng-controller="TimerController")
			div#TimeDisplay
				span#time {{ formatted() }}
			div#ButtonControls
				div#add
					div.minutes(data-ng-click="addMinutes(1)") 
						div 1
					div.minutes(data-ng-click="addMinutes(5)")
						div 5
					div.minutes(data-ng-click="addMinutes(10)")
						div 10
				div#control
					div#start(data-ng-click="start()") 
						div Start
					div#stop(data-ng-click="stop()") 
						div Stop
		script(type='text/javascript', src='cordova.js')
		script(type='text/javascript', src='js/app.min.js')